<h1>タスク一覧</h1>
<% if logged_in? %>

    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id, task_path(task) %> : <%= task.status %> &gt; <%= task.content %></li>
        <% end %>
    </ul>


    <%= link_to "新規投稿タスクの投稿", new_task_path %>


  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
